<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Samvi_Food.walletl">

    <ImageView
        android:id="@+id/bck"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        ></ImageView>



    <ImageView
        android:id="@+id/wlt"
        android:layout_below="@+id/bck"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_account_balance_wallet_black_24dp"
    >

    </ImageView>

    <TextView
        style="@style/CardView.Dark"
        android:layout_marginLeft="30dp"
        android:layout_width="189dp"
        android:layout_height="107dp"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@+id/wlt"
        android:text="Balence
                        0"
        android:textSize="40dp">

    </TextView>

    <TextView
        android:layout_width="592dp"
        android:layout_height="68dp"
        android:layout_below="@id/wlt"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:gravity="center"
        android:paddingLeft="20dp"

        android:text="Cashback History"
        android:textSize="30dp">

    </TextView>

</RelativeLayout>