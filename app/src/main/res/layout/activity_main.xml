<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
   >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_baseline_home_work_24"
        android:foregroundGravity="center" />

    <TextView
        android:id="@+id/bt_picker"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/location"
        android:text="Home"

        android:gravity="center"
        android:textColor="#6B8CE4"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_picker"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:textSize="15sp"
        android:textColor="#B1BAEF"
        android:text="3/88 vijyant kkhand gomti nagar"
        android:layout_toRightOf="@+id/location"

         />

    <TextView
        android:id="@+id/Lin"
        android:layout_width="95dp"
        android:layout_height="12dp"
        android:layout_below="@id/text_view"
android:gravity="center"

        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/location"
       android:textColor="#8A98EA"
        android:text="-----------------------" />


    <ImageView
        android:id="@+id/scan"
        android:layout_width="35dp"
        android:layout_height="31dp"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/bt_picker"


        android:src="@drawable/ic_baseline_chat_bubble_outline_24" />

    <ImageView
        android:id="@+id/paym"
        android:layout_width="35dp"
        android:layout_height="31dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/scan"

        android:foregroundGravity="center"
        android:src="@drawable/ic_payment_black_24dp" />

    <EditText
        android:id="@+id/searhop"
        android:layout_width="383dp"
        android:layout_height="36dp"
        android:layout_below="@+id/Lin"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/strokees"
        android:drawableLeft="@drawable/ic_search_black_24dp"


        android:shadowColor="#B97C7C"
        android:textColorHighlight="#FCF2F2" />

    <FrameLayout
        android:layout_below="@+id/searhop"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="547dp"
        android:layout_above="@id/bottom_navigation">


    </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
         app:labelVisibilityMode="selected"
        android:visibility="visible"
        android:layout_alignParentBottom="true"

        app:menu="@menu/bottom_navigation" />





</RelativeLayout>

    </RelativeLayout>