<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Samvi_Food.Market">


    <ImageView
        android:id="@+id/backho"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bac"
       android:src="@drawable/ic_baseline_arrow_back_24" >

    </ImageView>
    <TextView
        android:layout_toRightOf="@+id/backho"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/mar"
        android:textSize="25dp"
        android:paddingLeft="10dp"
        android:background="@drawable/bac"
        android:text="Samvi Market">

    </TextView>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="383dp"
        android:layout_height="36dp"
        android:layout_below="@+id/backho"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/strokees"
        android:drawableLeft="@drawable/ic_search_black_24dp"/>



    <TextView
        android:id="@+id/quick"
        android:layout_below="@+id/search_bar"
        android:layout_marginTop="15dp"
        android:background="#DC8C79"
        android:textColor="#fff"
        style="@style/CardView.Dark"
        android:layout_marginLeft="10dp"
        android:text="DAILY ESSENTIAL QUICKALY "
        android:layout_width="match_parent"
        android:layout_height="30dp">

    </TextView>

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="199dp"
        android:layout_height="127dp"
        android:layout_below="@+id/quick"
        android:layout_marginLeft="10dp"
        android:background="#ECC8D8"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="68dp"
         android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/txt1"
            android:foregroundGravity="center"
            android:background="@drawable/ic_search_black_24dp">

        </ImageView>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="115dp"
            android:layout_height="67dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="Find what you need"
            android:textSize="23dp"
         style="@style/CardView.Dark">

        </TextView>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/txt1"
            android:layout_marginLeft="10dp"
            android:text="Tap here to search now"
            android:textColor="#D64D4D"
            android:textSize="17dp"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="187dp"
        android:layout_height="127dp"
        android:layout_below="@+id/quick"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/rel1"
        android:background="#ECC8D8">


        <TextView
            android:id="@+id/txta"
            style="@style/CardView.Dark"
            android:layout_width="114dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Get the Daily essential"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/txtb"
            android:layout_width="166dp"
            android:layout_height="66dp"
            android:layout_below="@id/txta"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:textColor="#D64D4D"
            android:text="Fruit, vegetables,dairy,eggs,meats&amp;more"
            android:textSize="17dp">

        </TextView>

    </RelativeLayout>
    <TextView

        android:layout_below="@+id/rel1"
        android:text="Top brands delivering to you"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"
      style="@style/CardView.Dark"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/brand"></TextView>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="391dp"
        android:layout_height="98dp"
        android:layout_below="@+id/brand"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_background"
            android:src="@drawable/amul">

        </ImageView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/vishal"
            android:src="@drawable/round_background"

            >

        </ImageView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/vmartlogo"
            android:src="@drawable/round_background">

        </ImageView>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/partne"
        android:text="Partner stores near you"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        style="@style/CardView.Dark"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/line"
        ></TextView>



</RelativeLayout>